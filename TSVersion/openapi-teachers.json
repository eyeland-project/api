          }
        }
      },
      "StudentSumm": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "format": "int64"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "Student": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "format": "int64"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "blindness": {
            "type": "object",
            "properties": {
              "acuity": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "number",
                    "format": "int64"
                  },
                  "name": {
                    "type": "string"
                  }
